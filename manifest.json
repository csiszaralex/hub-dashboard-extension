{
  "manifest_version": 3,
  "name": "Hub",
  "version": "1.0.0",
  "description": "Minimalist dashboard focused on clarity.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": ["storage", "geolocation", "topSites", "identity"],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://api.bigdatacloud.net/*",
    "https://images.unsplash.com/*",
    "https://api.unsplash.com/*",
    "https://stoic.tekloon.net/stoic-quote",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "617448524668-t2ouhpj4e7dnhgh9k335uq8jlllq9ubg.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/calendar.events.readonly"]
  }
}
